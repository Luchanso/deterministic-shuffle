{
  "name": "@luchanso/deterministic-shuffle",
  "version": "1.0.4",
  "main": "index.js",
  "repository": "git@github.com:Luchanso/deterministic-shuffle.git",
  "author": "Oleg Loutchansky <luchansodev@gmail.com>",
  "license": "MIT",
  "scripts": {
    "release-patch": "npm version patch -m 'bump patch version'",
    "build": "babel src -d .build --ignore __test__ && cp -r ./src/**/*.d.ts package.json yarn.lock .build",
    "publish": "rm -rf .build && yarn && yarn test && yarn build && cd .build && npm publish",
    "test": "jest --coverage"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-jest": "^23.6.0",
    "babel-preset-env": "^1.7.0",
    "jest": "^23.6.0"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
